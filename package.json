  "repository": {
    "type": "git",
    "url": "https://github.com/unindented/twitch-player"
  },
  "workspaces": [
    "projects/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "precise-commits",
      "pre-push": "yarn test"
    }
  },
  "scripts": {
    "clean:projects": "lerna run clean",
    "clean:lerna": "lerna clean --yes",
    "clean:modules": "shx rm -rf node_modules",
    "clean": "run-s clean:*",
    "test": "jest --coverage",
    "build:public": "lerna run --scope @twitch-player/public build",
    "build:tizen": "lerna run --scope @twitch-player/tizen build",
    "build:web": "lerna run --scope @twitch-player/web build",
    "build:graphiql": "lerna run --scope @twitch-player/graphiql build",
    "build:storybook": "lerna run --scope @twitch-player/ui build:storybook",
    "build": "run-p build:*",
    "rebuild": "lerna run build"
  },
